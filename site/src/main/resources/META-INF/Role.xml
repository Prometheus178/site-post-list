<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.realestate.site.users.entities.Role" table="roles" schema="real-estate-site">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="role" column="role"/>
        <set name="users" table="user_role" inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="role_id" not-null="true"/>
            </key>
            <many-to-many entity-name="com.realestate.site.users.entities.User">
                <column name="user_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>